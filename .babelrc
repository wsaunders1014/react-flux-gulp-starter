{
  "presets": [
    ["es2015", { "modules": false }],
    "react",
    "stage-0"
  ],
  "plugins": [
    "transform-decorators-legacy",
    "transform-class-properties",
    ["module-resolver", {
      "root": ["./src/javascript"],
      "alias": {
        "actions": "actions",
        "components": "components",
        "config": "config",
        "libs": "libs",
        "stores": "stores",
        "utils": "utils",
        "middleware": "middleware"
      }
    }]
  ],
  "env": {
    "production": {
      "plugins": ["transform-react-remove-prop-types", "transform-react-constant-elements"]
    }
  }
}
